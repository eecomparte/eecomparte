
(
SELECT TODOS.ID_ROLE, TODOS.ID_MODULE, TODOS.ID_SCREEN, P_SCREEN.PERMISSION_LEVEL, TODOS.DESCRIPTION, TODOS.FATHER_SCREEN, TODOS.IS_SCREEN, TODOS.SCREEN_NAME, TODOS.MENU_ORDER, TODOS.WEB_LINK
FROM (SELECT ID_ROLE,ID_MODULE, CCR_CONF_SCREEN.* FROM BDD_CCR.CCR_CONF_SCREEN, BDD_CCR.CCR_CONF_ROLE,BDD_CCR.CCR_CONF_MODULE) TODOS 
INNER JOIN BDD_CCR.CCR_CONF_PERMISSION_MODULE P_MODU
ON (TODOS.ID_ROLE = P_MODU.ID_ROLE AND TODOS.ID_MODULE = P_MODU.ID_MODULE AND P_MODU.PERMISSION_LEVEL > 0)
INNER JOIN BDD_CCR.CCR_CONF_PERMISSION_SCREEN P_SCREEN
ON (TODOS.ID_ROLE = P_SCREEN.ID_ROLE AND TODOS.ID_SCREEN = P_SCREEN.ID_SCREEN AND P_SCREEN.PERMISSION_LEVEL > 0)
INNER JOIN BDD_CCR.CCR_CONF_MODULE_SCREEN MOD_SCREEN
ON (TODOS.ID_SCREEN = MOD_SCREEN.ID_SCREEN AND TODOS.ID_MODULE = MOD_SCREEN.ID_MODULE)
)
ORDER BY ID_ROLE,ID_MODULE
